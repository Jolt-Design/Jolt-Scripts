  },
  "version": "1.1.2",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/node": "^24.10.9",
    "@types/which": "^3.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "rimraf": "^6.1.2",
